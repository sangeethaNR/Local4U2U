<section>
  <div class="row" style="margin: 100px">
    <div class="col-md-6" style="border: 5px solid #8BB174">
      <h2 class="formHeader">Login</h2>

      <form class="form login-form">
        <div class="form-group">
          <label for="email-login" class="form-label mt-4">Email Address:</label>
          <input type="email" class="form-control" type="text" id="email-login" placeholder="Enter email" />
        </div>
        <div class="form-group">
          <label for="password-login" class="form-label mt-4">Password:</label>
          <input class="form-control" type="password" id="password-login" placeholder="Password" />
        </div>

        <div class="form-group">
          <button class="btn btn-primary" type="submit">Log In</button>
        </div>
      </form>
    </div>
    <div class="col-md-6" style="border: 5px solid #8BB174;">
      <h2 class="formHeader">Signup</h2>

      <form class="form signup-form">
        <div class="form-group">
          <label for="name-signup" class="form-label mt-4">Name:</label>
          <input class="form-control" type="text" id="name-signup" placeholder="First, Last" />
        </div>
        <div class="form-group">
          <label for="email-signup" class="form-label mt-4">Email:</label>
          <input class="form-control" type="text" id="email-signup" placeholder="Email Address" />
        </div>
        <div class="form-group">
          <label for="password-signup" class="form-label mt-4">Password:</label>
          <input class="form-control" type="password" id="password-signup" placeholder="Password" />
          <button class="btn btn-primary" type="submit">Create New Account</button>
        </div>

    </div>
  </div>
</section>

<script src="/js/login.js"></script>