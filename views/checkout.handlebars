<script>
  var data = document.querySelectorAll('.price');
  console.log('data' + data)
  var sum = 0;
  for (var i = 0; i < data.length; i++) {
    let noOfProducts = data[i].nextElementSibling.innerHTML;
    var price = data[i].childNodes[0].nodeValue.toString().split('$')[data[i].childNodes[0].nodeValue.toString().split('$').length - 1];
    sum = sum + (parseInt(price) * parseInt(noOfProducts));
    document.getElementById('total').textContent = '$' + sum
  }
</script>