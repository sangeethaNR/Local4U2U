<section id="cart">
    My shopping list
 <div class="container">
    {{#each cart_products as | products|}}
    <div class="row">
      <div class="col-lg-6">
        <div class="card " style="width: 18rem;">
          <img src={{item_image}} class="card-img-top" alt="...">
        </div>
      </div>
      <div class="col-lg-6">
        <div class="car">
          <h5 class="card-title ">{{item_name}}</h5> 
          <p class="card-text ">Price: ${{item_price}}</p>
          <p class="card-text">Quantity: {{quantity}}</p>
          <p class="card-text">total: $ <span class="total">{{total}}</span></p>
           {{newTotal}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  <p>Subtotal: <span class="subtotal"></span></p>
</section>
<br>
<a href="/checkout" style="color:green">Ready to Checkout?</a>
</br>
