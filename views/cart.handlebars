  ></script>

  <script>
 var data = document.querySelectorAll('.total');
 console.log('data'+ data)
 var sum=0;
for (var i=0;i<data.length;i++) {
    console.log(data[i].className + " " + data[i].childNodes[0].nodeValue);
    var price = data[i].childNodes[0].nodeValue.toString().split('$')[ data[i].childNodes[0].nodeValue.toString().split('$').length - 1];
   
    sum=sum + parseInt(price);
    document.querySelector('.subtotal').textContent  = '$' + sum

}
</script>
